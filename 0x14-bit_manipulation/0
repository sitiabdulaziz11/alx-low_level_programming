#include "main.h"
/**
 * binary_to_uint - a function that converts a binary number to an unsigned int.
 * @b: binary numbers.
 *
 * Return: 0.
 */
unsigned int binary_to_uint(const char *b)
{
	int len = 0, t, j;
	unsigned int total = 0, power = 1;

	while (b[len] != '\0')
	{
		len++;
	}

	if (b == NULL)
		return (0);
	for (t = len - 1; t >= 0; t--)
	{
		if (b[t] == '1')
		{
			for (j = 0; j < len - 1 - t; j++)
			{
				power *= 2;
			}
			total += power;
		}
		else if (b[t] != '0')
			return (0);
	}
	return (total);
}
